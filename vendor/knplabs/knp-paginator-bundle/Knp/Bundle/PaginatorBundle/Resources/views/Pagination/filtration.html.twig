<form id="formFilter" method="get" enctype="application/x-www-form-urlencoded"  class="form-inline">
<div class="form-group">
    <select name="{{ filterFieldName }}" class="form-control">
        {% for field, label in fields %}
            <option value="{{ field }}"{% if selectedField == field %} selected="selected"{% endif %}>{{ label }}</option>
        {% endfor %}
    </select>
</div>
<div class="form-group">
    <input type="text" value="{{ selectedValue }}" name="{{ filterValueName }}" class="form-control"/>
</div>
    <button onclick="LoadFilter();return false;" class="btn btn-info" title="Filtrar por campo">Filtrar</button>

</form>
<br/>

<script type="text/javascript">

var LoadFilter=function(){
	var url='{{ options[0] }}';
	var params=$('#formFilter').serializeObject();
	new jAjax().Load(url,'main-body','get',params,'');
	return false;
}
</script>