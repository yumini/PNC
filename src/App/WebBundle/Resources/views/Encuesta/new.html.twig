<form id="myform" method="post" {{ form_enctype(form) }}>
    {{form_widget(form._token)}}
    <input type="hidden" name="_method" value="POST" />
    <div class="row">
        <div class="col-md-12">
            <label class="control-label">Tipo Encuesta:</label><br/>
            {{form_widget(form.tipoEncuesta)}}
        </div>
       
    </div>
    <br/>
    <div class="row">
        <div class="col-md-12">
            <label class="control-label">Titulo:</label><br/>
            {{form_widget(form.titulo)}}
        </div>
       
    </div>
    <br/>
    <div class="row">
        <div class="col-md-12">
            <label class="control-label">Descripcion:</label><br/>
            {{form_widget(form.descripcion)}}
        </div>
       
    </div>
    <br/>
    <div class="row">
        <div class="col-md-4">
            <label class="control-label">Fecha Inicio:</label><br/>
            {{form_widget(form.inicio)}}
        </div>
        <div class="col-md-4">
            <label class="control-label">Fecha Fin:</label><br/>
            {{form_widget(form.fin)}}
        </div>
        <div class="col-md-4">
            <label class="control-label">Max. Opciones:</label><br/>
            {{form_widget(form.maxopciones)}}
        </div>
    </div>
  <br/>
    <div class="row">
        <div class="col-md-4">
            <label class="control-label">Activo?</label>
            {{form_widget(form.estado)}}
        </div>
      
    </div>
</form>
